<!-- #enterprise-container .columns:nth-child(even) p -->
<div class="container" id="enterprise-container">
  {{#each clinics}}
  <div class="columns is-0">
    <div class="column is-3">
      <p class="notification has-text-centered">
        <span class="icon is-small is-left tooltip">
          <i
            class="fas {{#if is_company}}fa-industry{{else}}fa-user-md{{/if}}"
          ></i>
          <span class="tooltiptext">{{clinic.specialty}}</span>
        </span>
        {{#if clinic.is_company}} {{clinic.clinic_name}} {{else}}
        {{clinic.name}} {{clinic.last_name}} {{/if}}
      </p>
    </div>

    <div class="column is-3">
      <p class="notification has-text-centered">
        {{#if clinic.email}}
        <span class="icon is-small is-left tooltip">
          <a href="mailto:{{email}}" title="email {{name}} {{last_name}}"
            ><i class="fas fa-envelope"></i
          ></a>
          <span class="tooltiptext">email: {{clinic.email}}</span>
        </span>
        {{/if}} {{#if clinic.instagram}}
        <span class="icon is-small is-left tooltip">
          <a
            href="{{instagram}}"
            target="_blank"
            title="Instagram {{name}} {{last_name}}"
            ><i class="fab fa-instagram"></i
          ></a>
          <span class="tooltiptext">instagram: {{clinic.instagram}}</span>
        </span>
        {{/if}} {{#if fb}}
        <span class="icon is-small is-left tooltip">
          <a
            href="{{fb}}"
            target="_blank"
            title="facebook {{name}} {{last_name}}"
            ><i class="fab fa-facebook"></i
          ></a>
          <span class="tooltiptext">facebook: {{fb}}</span>
        </span>
        {{/if}} {{#if phone}}
        <span class="icon is-small is-left tooltip">
          <a
            href="{{phone}}"
            target="_blank"
            title="Phone {{name}} {{last_name}}"
            ><i class="fas fa-phone"></i
          ></a>
          <span class="tooltiptext">{{name}} {{last_name}}: {{phone}}</span>
        </span>
        {{/if}} {{#if linked_in}}
        <span class="icon is-small is-left tooltip">
          <a
            href="{{linked_in}}"
            target="_blank"
            title="linkedin: {{linked_in}}"
            ><i class="fab fa-linkedin"></i
          ></a>
          <span class="tooltiptext">LinkedIn: {{linked_in}}</span>
        </span>
        {{/if}}
      </p>
    </div>

    <div class="column is-1">
      <p class="notification is-small has-text-centered">
        <span class="icon is-small is-left tooltip">
          <i class="fas fa-calendar-alt"></i>
          <span class="tooltiptext">{{clinic.first_contact_date}}</span>
        </span>
      </p>
    </div>

    <div class="column is-1">
      {{#each funnel_tag}} {{#if selected}}
      <div class="notification is-small has-text-centered is-lost">
        <span class="icon is-small is-left tooltip">
          <i class="{{icon}}"></i>
          <span class="tooltiptext">{{text}}</span>
        </span>
      </div>
      {{/if}} {{/each}}
    </div>

    <div class="column is-1">
      <p class="notification is-small has-text-centered">
        <span class="icon is-small is-left tooltip">
          <i class="fas fa-clipboard"></i>
          <span class="tooltiptext">{{clinic.notes}}</span>
        </span>
      </p>
    </div>

    <div class="column is-2">
      <p class="notification is-small has-text-centered">
        {{#each services_offered}} {{#if (str_equal this "BRANDING")}}
        <span class="icon is-small is-left tooltip"
          ><i class="fas fa-copyright"></i
          ><span class="tooltiptext">Branding</span></span
        >
        {{/if}} {{#if (str_equal this "WEBSERVICES")}}
        <span class="icon is-small is-left tooltip"
          ><i class="fas fa-globe-americas"></i
          ><span class="tooltiptext">Web Services</span></span
        >
        {{/if}} {{#if (str_equal this "DIGITALSTRATEGY")}}
        <span class="icon is-small is-left tooltip"
          ><i class="fas fa-robot"></i
          ><span class="tooltiptext">Digital Strategy</span></span
        >
        {{/if}} {{#if (str_equal this "ATTRACTIONOFNEWCLIENTS")}}
        <span class="icon is-small is-left tooltip"
          ><i class="fas fa-magnet"></i
          ><span class="tooltiptext">Attract new clients</span></span
        >
        {{/if}} {{#if (str_equal this "SALESMANAGEMENT")}}
        <span class="icon is-small is-left tooltip"
          ><i class="far fa-money-bill-alt"></i
          ><span class="tooltiptext">Sales Management</span></span
        >
        {{/if}} {{/each}}
      </p>
    </div>

    <div class="column is-1">
      <p class="notification has-text-centered">
        <span
          class="icon is-small tooltip"
          hx-post="{{../conf.server_protocol}}://{{../conf.hbs_target_address}}{{../conf.hbs_target_port}}/clinics/edit/{{clinic.uuid}}"
          hx-swap="innerHTML"
          hx-target="#dynamic-content"
        >
          <i class="fas fa-pencil-alt"></i>
          <span class="tooltiptext">Edit</span>
        </span>
      </p>
    </div>
  </div>
  {{/each}}
</div>
{{#each conf}}{{server_protocol}}{{/each}}{{#each
conf}}{{server_address}}{{/each}}
