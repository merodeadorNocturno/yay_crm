<div class="cell">
  <form
    class="box"
    id="clinic_edit"
    hx-patch="{{conf.server_protocol}}://{{conf.hbs_target_address}}{{conf.hbs_target_port}}/clinical"
    hx-swap="innerHTML"
    hx-headers='{"Content-Type": "application/json"}'
    hx-ext="json-enc"
    hx-vals='js:{...checkClinicFields()}'
  >
    <div class="field is-horizontal">
      <!-- name last name 1-->
      <div class="field-label is-normal"> <!-- 2 -->
        <label class="label">Nombre</label>
      </div>
      <!-- /2 -->
      <div class="field-body">
        <!-- 3 -->
        <div class="field"> <!-- 4 -->
          <p class="control is-expanded has-icons-left"> <!-- 5 -->
            <input
              class="input"
              type="text"
              name="name"
              placeholder="Nombre"
              value="{{c.name}}"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p> <!-- /5 -->
        </div> <!-- /4 -->
        <div class="field"> <!-- last_name 6 -->
          <p class="control is-expanded has-icons-left">
            <!-- 7 -->
            <input
              class="input"
              type="text"
              name="last_name"
              placeholder="Apellido"
              value="{{c.last_name}}"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
          <!-- /7 -->
        </div> <!-- /6 -->

      </div>
      <!-- /3 -->
    </div>
    <!-- /1 -->

    <div class="field is-horizontal"> <!-- is_company - company_name -->
      <div class="field-label is-normal">
        <label class="label">&iquest;Es Hospital o Clínica?</label>
      </div>

      <div class="field-body">

        <div class="field is-narrow"> <!-- Is Company -->
          <div class="control" style="padding-top: 10px;">
              <input
                type="checkbox"
                name="is_company"
                id="is_company"
                hx-on:change="is_company_bool()"
                {{#if e.is_company}} checked {{/if}}
              />
              Sí / No
          </div>
        </div>

        <div class="field"> <!-- company_name -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              name="clinic_name"
              placeholder="Nombre compañía"
              value="{{c.clinic_name}}"
              hx-on:change="is_company_bool()"
              id="clinic_name"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-industry"></i>
            </span>
          </div>
        </div>


        <div class="field"> <!-- Especialidad -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              name="specialty"
              placeholder="Especialidad"
              value="{{c.specialty}}"
              hx-on:keyup="is_company_bool()"
              id="specialty"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-sync-alt"></i>
            </span>
          </div>
        </div>
      </div>
    </div> <!-- /is_company.field.is-horizontal -->

    <div class="field is-horizontal"> <!-- datos de contacto -->
      <div class="field-label is-normal">
        <label class="label">Datos de Contacto</label>
      </div>

      <div class="field-body">
        <div class="field"> <!-- email -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="email"
              placeholder="Correo-e del Contacto"
              name="email_tag"
              value="{{c.email}}"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class="field"> <!-- phone -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Teléfono de contacto"
              name="phone"
              value="{{c.phone}}"
            />
            <span class="icon is-small is-left">
              <i class="fas fa-phone"></i>
            </span>
          </div>
        </div>
      </div>
    </div>




    <div class="field is-horizontal"> <!-- datos de contacto -->
      <div class="field-label is-normal">
        <label class="label">Web de la Clínica</label>
      </div>

      <div class="field-body">
        <div class="field"> <!-- email -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="email"
              placeholder="Correo-e del Contacto"
              name="clinic_email_tag"
              value=""
            />
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class="field"> <!-- phone -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Teléfono de contacto"
              name="clinic_web"
              value=""
            />
            <span class="icon is-small is-left">
              <i class="fas fa-phone"></i>
            </span>
          </div>
        </div>
      </div>
    </div>



    <div class="field is-horizontal"> <!-- fb - instagram -->
      <div class="field-label is-normal">
        <label class="label">Instagram - FB</label>
      </div>
      <div class="field-body">

        <div class="field"> <!-- instagram -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Enter the company instagram"
              name="instagram_tag"
              value="{{c.instagram}}"
            />
            <span class="icon is-small is-left">
              <i class="fab fa-instagram"></i>
            </span>
          </div>
        </div>

        <div class="field"> <!-- fb -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Enter the facebook address"
              name="fb_tag"
              value="{{c.fb}}"
            />
            <span class="icon is-small is-left">
              <i class="fab fa-facebook"></i>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal"> <!-- twitter - tiktok -->
      <div class="field-label is-normal">
        <label class="label">Twitter - TikTok</label>
      </div>
      <div class="field-body">
        <div class="field"> <!-- twitter -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Enter the company twitter"
              name="twitter_tag"
              value="{{c.twitter}}"
            />
            <span class="icon is-small is-left">
              <i class="fab fa-twitter"></i>
            </span>
          </div>
        </div>

        <div class="field"> <!-- fb -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Enter the company tiktok"
              name="tik_tok_tag"
              value="{{c.tik_tok}}"
            />
            <span class="icon is-small is-left">
              <i class="fab fa-tiktok"></i>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">LinkedIn</label>
      </div>
      <div class="field-body">
        <div class="field"> <!-- linked_in -->
          <div class="control has-icons-left">
            <input
              class="input"
              type="text"
              placeholder="Enter linkedIn address or handle"
              name="linked_in_tag"
              value="{{c.linked_in}}"
            />
            <span class="icon is-small is-left">
              <i class="fab fa-linkedin"></i>
            </span>
          </div>
        </div>
      </div>
    </div>


    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Funnel</label>
      </div>
      <div class="field-body">
        <div class="field is-narrow">
          <div class="control">
            <div class="select is-fullwidth">
              <select name="sales_funnel">
                {{#each sales_funnel}}
                  <option {{#if selected}} selected {{/if}} value="{{value}}">{{text}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Servicios Ofrecidos</label>
      </div>
      <div class="field-body">
        <div class="field is-narrow">
          <div class="control">
            <div class="select is-multiple">
              <select name="services_offered" size="5" multiple>
                {{#each services_tag}}
                    <option {{#if selected}}selected{{/if}} value="{{value}}">{{text}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Notas</label>
      </div>
      <div class="field-body">
        <div class="field"> <!-- notes -->
          <div class="control is-expanded">
            <textarea
              class="textarea"
              name="notes"
              placeholder="Enter your message">{{c.notes}}</textarea
            >
          </div>
        </div>
      </div>
    </div>



    <!-- hidden_fields -->
    <input type="hidden" name="uuid" value="{{c.uuid}}" />
    <input type="hidden" name="first_contact_date" value="{{c.first_contact_date}}" />
    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light"
          hx-post="{{conf.server_protocol}}://{{conf.hbs_target_address}}{{conf.hbs_target_port}}/htmx/clinics/table" hx-swap="innerHTML"
                        hx-target="#dynamic-content"
        >Cancel</button>
      </div>
    </div>
  </form>
</div>


<script>
function is_company_bool(my_form) {
  const { checked: is_company } = document.getElementById("is_company");

  let { value: specialty = null } = document.getElementById("specialty");
  let { value: clinic_name = null } = document.getElementById("clinic_name");

  specialty = specialty ? `"${specialty}"` : null;
  clinic_name = clinic_name ? `"${clinic_name}"` : null;


  return {
    is_company,
    specialty,
    clinic_name,
  }
}

function checkClinicFields() {
    const exclude = [
      "services_offered",
      "school_level",
      "sales_funnel"
    ];
    let form = document.getElementById("clinic_edit");

    const company_metadata = is_company_bool(form);

    let formData = new FormData(form);
    let data = Array.from(formData.entries());

    const post_data = {};

    for (let [key, value] of data) {
      if (exclude.includes(key)) {
        continue;
      }

      const new_key = key.replace('_tag', '');
      if (value) {
        post_data[new_key] = value
      }
    };

    post_data.deleted = false;

    const result = { ...post_data, ...company_metadata };

    return result
}
</script>
